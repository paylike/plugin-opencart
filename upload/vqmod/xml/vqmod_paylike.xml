						type: 'post',
						data: {trans_ref: p_trans_ref, p_action: p_action, p_amount: p_amount, p_reason: p_reason, p_order_id: <?php echo (int)$_GET['order_id']; ?>, p_captured: p_captured},
						dataType: 'json',
						beforeSend: function() {
							$('#paylike_action_btn').val('Processing');
